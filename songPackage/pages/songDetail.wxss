@import "/static/iconfont/iconfont.wxss";

page {
    height: 100%;
}

.songDetailContainer {
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    align-items: center;
}

/*歌手*/
.auther {
    font-size: 50rpx;
    height: 100rpx;
    line-height: 100rpx;
}

/*底座*/
.circle {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background-color: white;
    z-index: 100;
}

/*摇杆*/
.needle {
    width: 150rpx;
    height: 200rpx;
    position: relative;
    top: -25rpx;
    left: 45rpx;
    z-index: 99;
    transform: rotate(-20deg);
    transform-origin: 10rpx 0;
    transition: transform 1s;
}

.needleRotate {
    transform: rotate(0deg);
}

/*磁盘*/
.discContainer {
    position: relative;
    top: -130rpx;
    width: 600rpx;
    height: 600rpx;
}

.disc {
    width: 100%;
    height: 100%;
}

.musicImg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 370rpx;
    height: 370rpx;
    border-radius: 50%;
}

.discAnimation {
    animation: disc 4s linear infinite;
    animation-delay: 0.8s;
}

@keyframes disc {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }

}


/*进度条控制*/
.controllContainer {
    position: absolute;
    bottom: 240rpx;
    display: flex;
    border: red 1px solid;
}

.controllContainer .barControl-bottom {
    width: 500rpx;
    height: 5rpx;
    background-color: rgb(255, 255, 255, 0.8);
    border-radius: 5rpx;
    position: relative;
    margin: auto;
}

/*实时进度条*/
.controllContainer .barControl-current {
    width: 100rpx;
    height: 5rpx;
    background-color: red;
}

/*小球*/
.controllContainer .audio-circle {
    margin-left: 100rpx;
    width: 10rpx;
    height: 10rpx;
    background-color: white;
    border-radius: 50%;
}


/*底部控制按钮*/
.musicControl {
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: row;
    width: 100%;
    border-top: black 1rpx solid;
}

.musicControl text {
    width: 20%;
    text-align: center;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 50rpx;
    padding-top: 5rpx;
}

.musicControl .big {
    font-size: 80rpx;
}