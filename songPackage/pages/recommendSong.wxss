@import "/static/iconfont/iconfont.wxss";


page {
    height: 100%;
}

.recommendSongContainer .header {
    position: relative;
    width: 100%;
    height: 300rpx;
}

.header image {
    width: 100%;
    height: 100%
}

.header .date {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -150rpx;
    margin-top: -30rpx;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}

.header .date .day {
    font-size: 38rpx;
}

.ListContainer {
    position: relative;
    margin-top: -50rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background-color: #fff;
}

.ListContainer .listHeader {
    height: 80rpx;
    line-height: 80rpx;
}

.listHeader .changeMore {
    float: right;
}

.listScroll {
    height: calc(100vh - 380rpx);
}

.listScroll .scrollItem {
    display: flex;
    flex-direction: row;
    margin-bottom: 20rpx;
}

.scrollItem image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.scrollItem .musicInfo {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.musicInfo text {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 500rpx;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
}

.scrollItem .iconfont {
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}













