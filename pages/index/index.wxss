.banners {
    width: 100%;
    height: 300rpx;
    background: aqua;
}

.banners .item image{
    width: 100%;
    height: 100%;
}

.scrollCon{
    display: flex;
    flex-direction: row;
}

.scrollCon .navItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.navItem .iconfont{
    width: 100rpx;
    height: 100rpx;

    line-height: 100rpx;
    font-size: 50rpx;

    background: rgb(240, 19, 19);
    border-radius: 50%;
    text-align: center;
    color: azure;
    margin: 20rpx 0;
}

.navItem text{
    font-size: 26rpx;
}

.scroll-container{
    display: flex;
    height: 300rpx;
}

.scroll-container view{
    margin-right: 20rpx;
}
.scroll-container image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scroll-container view text {
    font-size: 26rpx;
    /* 单行文本溢出隐藏 省略号代替 */
    /*display: block;*/
    /*white-space: nowrap;*/
    /*overflow: hidden;*/
    /*text-overflow: ellipsis;*/

    /* 多行文本溢出隐藏 省略号代替*/
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical; /*设置对其模式*/
    -webkit-line-clamp: 2; /*设置多行的行数*/
}





